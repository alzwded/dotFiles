set ssl_force_tls = yes
set abort_nosubject = yes
set sort = "reverse-date-received"
#set sort = "threads"
set copy = yes
set mail_check = 60

set header_cache=~/.config/mutt/cache/headers
set message_cachedir=~/.config/mutt/cache/bodie
auto_view text/html application/pdf application/msword
alternative_order text/plain text text/enriched text/html              
mime_lookup application/octet-stream       

set from = "@gmail.com"
set realname = ""

# Imap settings
set imap_user = "@gmail.com"
set imap_pass = "`cat ~/.secret/gmail`"

# Smtp settings
set smtp_url = smtps://john.doe@smtp.gmail.com"
set smtp_pass = "`cat ~/.secret/gmail`"

# folders
set folder = "imaps://imap.gmail.com/"
set spoolfile = "+INBOX"
set postponed = "+[Gmail]/Drafts"
set record = "+[Gmail]/Sent Mail"
set trash = "+[Gmail]/Trash"

set imap_peek = yes
set imap_fetch_chunk_size = 100
set imap_deflate = yes

set editor='vim + -c "set textwidth=72" -c "set wrap"'

